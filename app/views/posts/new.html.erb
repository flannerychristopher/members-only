<div class='centered-div'>
  <%= link_to 'back to all posts', root_path %>
  <p>signed in as: <%= current_user.name %></p>
</div>

<hr>

<h1>Create Post</h1>

<%= form_for(@post) do |f| %>

  <%= f.label :title %>
    <br>
  <%= f.text_field :title %>
    <br>

  <%= f.label :body, "Body: must be less than 255 characters" %>
    <br>
  <%= f.text_area :body %>
    <br>

  <%= f.submit "submit" %>

<% end %>
